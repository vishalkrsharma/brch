{
  "name": "brch",
  "version": "0.0.1",
  "description": "A simple VCS",
  "author": "vishalkrsharma",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vishalkrsharma/brch"
  },
  "keywords": [
    "vcs",
    "version control",
    "git",
    "repository"
  ],
  "bin": {
    "brch": "./dist/index.js"
  },
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node && bun run types",
    "types": "tsc -p tsconfig.types.json",
    "dev": "bun run src/index.ts",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@types/ini": "^4.1.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "ini": "^6.0.0"
  }
}
